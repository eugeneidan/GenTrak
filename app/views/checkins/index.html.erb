<p id="notice"><%= notice %></p>

<h1>List of Items</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Item</th>
      <th>Source</th>
      <th>State</th>
      <th>Purpose</th>
      <th>Serial No</th>
      <th>Waybill No</th>
      <th>Received By</th>
      <th>Sent By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checkins.each do |checkin| %>
      <tr>
        <td><%= checkin.dateIn.strftime('%d-%m-%y') %></td>
        <td><%= checkin.item.name %></td>
        <td><%= checkin.source %></td>
        <td><%= checkin.state %></td>
        <td><%= checkin.purpose %></td>
        <td><%= checkin.serialNo %></td>
        <td><%= checkin.waybillNo %></td>
        <td><%= checkin.receivedBy %></td>
        <td><%= checkin.sentBy %></td>
        <td><%= link_to 'Show', checkin %></td>
        <td><%= link_to 'Edit', edit_checkin_path(checkin) %></td>
        <td><%= link_to 'Destroy', checkin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

